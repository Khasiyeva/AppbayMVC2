@using Appbay.Core.Models;
@model List<Feature>

    <div class="container">
        <br /> <br /> <br />
        <h3>Features</h3>
        <a class="btn btn-primary" asp-controller="Feature" asp-action="Create">Create</a> 
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                        <a class="btn btn-secondary" asp-controller="Feature" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Feature" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            
        }

    </tbody>
</table>
</div>